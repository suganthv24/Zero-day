  <script>
    // Sample announcement data
    const announcements = {
      1: {
        title: "Library Hours Extended",
        description: "The campus library will now be open 24/7 during exam week to provide students with additional study space and resources. Security will be present throughout the night to ensure safety. Additional study rooms have been made available, and the IT help desk will have extended hours to assist with technical issues. Free coffee and snacks will be provided during late-night hours.",
        date: "March 15, 2025",
        location: "Campus Library",
        views: 245,
        priority: "Medium",
        author: "Library Administration"
      },
      2: {
        title: "Campus WiFi Maintenance",
        description: "Scheduled maintenance on campus WiFi network will occur this Saturday from 2:00 AM to 6:00 AM. Internet services may be intermittent during this period. Mobile hotspots will be available at the IT help desk for students who need internet access during maintenance. We apologize for any inconvenience and appreciate your patience.",
        date: "March 14, 2025",
        location: "All Buildings",
        views: 892,
        priority: "High",
        author: "IT Department"
      },
      3: {
        title: "Spring Festival 2025",
        description: "Join us for the annual Spring Festival on March 25th! Food stalls, live music, games, and activities for all students. Registration starts next week. Don't miss this exciting celebration of spring! There will be performances by local bands, cultural shows, and various competitions with exciting prizes. Food from different cuisines will be available.",
        date: "March 12, 2025",
        location: "Main Quad",
        views: 156,
        priority: "Low",
        author: "Student Affairs"
      },
      4: {
        title: "New Parking Regulations",
        description: "New parking regulations are now in effect. All vehicles must display current parking permits. Violators will be towed at owner's expense. Permits can be obtained from the security office during business hours. Temporary permits are available for visitors. Please ensure your vehicle information is updated in the system.",
        date: "March 10, 2025",
        location: "All Parking Lots",
        views: 423,
        priority: "High",
        author: "Security Office"
      },
      5: {
        title: "Career Fair 2025",
        description: "Annual Career Fair will be held on April 5th from 10 AM to 4 PM. Over 50 companies will be participating. Bring your resumes and dress professionally. Pre-registration is recommended. Companies from various industries including tech, finance, healthcare, and education will be present. Career counseling sessions will also be available.",
        date: "March 8, 2025",
        location: "Student Center",
        views: 678,
        priority: "Medium",
        author: "Career Services"
      },
      6: {
        title: "Cafeteria Menu Update",
        description: "New healthy menu options are now available at the main cafeteria. Featuring organic vegetables, lean proteins, and gluten-free alternatives. Nutritional information is displayed for all items. Special dietary requirements can be accommodated with advance notice. Feedback forms are available at the serving counter.",
        date: "March 6, 2025",
        location: "Main Cafeteria",
        views: 234,
        priority: "Low",
        author: "Food Services"
      }
    };

    function viewAnnouncement(id) {
      const announcement = announcements[id];
      if (!announcement) return;

      document.getElementById('modalTitle').textContent = announcement.title;
      
      const modalMeta = document.getElementById('modalMeta');
      modalMeta.innerHTML = `
        <div class="meta-detail">
          <i class="fas fa-calendar-alt"></i>
          <span><strong>Date:</strong> ${announcement.date}</span>
        </div>
        <div class="meta-detail">
          <i class="fas fa-map-marker-alt"></i>
          <span><strong>Location:</strong> ${announcement.location}</span>
        </div>
        <div class="meta-detail">
          <i class="fas fa-eye"></i>
          <span><strong>Views:</strong> ${announcement.views}</span>
        </div>
        <div class="meta-detail">
          <i class="fas fa-flag"></i>
          <span><strong>Priority:</strong> ${announcement.priority}</span>
        </div>
        <div class="meta-detail">
          <i class="fas fa-user"></i>
          <span><strong>Author:</strong> ${announcement.author}</span>
        </div>
      `;

      document.getElementById('modalDescription').textContent = announcement.description;
      document.getElementById('viewModal').style.display = 'flex';
    }

    function editAnnouncement(id) {
      // Add loading state
      event.target.innerHTML = '<span class="loading"></span> Editing...';
      
      setTimeout(() => {
        alert(`Edit functionality for announcement ${id} would be implemented here. This would typically redirect to an edit form or open an edit modal.`);
        event.target.innerHTML = '<i class="fas fa-edit"></i> Edit';
      }, 1000);
    }

    function deleteAnnouncement(id) {
      const announcement = announcements[id];
      if (!announcement) return;

      if (confirm(`Are you sure you want to delete "${announcement.title}"? This action cannot be undone.`)) {
        // Add loading state
        const deleteBtn = event.target;
        deleteBtn.innerHTML = '<span class="loading"></span> Deleting...';
        deleteBtn.disabled = true;

        setTimeout(() => {
          // Remove the card from DOM
          const card = deleteBtn.closest('.announcement-card');
          card.style.transform = 'scale(0)';
          card.style.opacity = '0';
          
          setTimeout(() => {
            card.remove();
            alert('Announcement deleted successfully!');
          }, 300);
        }, 1000);
      }
    }

    function createAnnouncement() {
      const createBtn = event.target;
      createBtn.innerHTML = '<span class="loading"></span> Loading...';
      
      setTimeout(() => {
        alert('Create announcement functionality would be implemented here. This would typically redirect to a create form or open a create modal.');
        createBtn.innerHTML = '<i class="fas fa-plus"></i> Create New Announcement';
      }, 1000);
    }

    function closeModal() {
      document.getElementById('viewModal').style.display = 'none';
    }

    // Close modal when clicking outside
    window.onclick = function(event) {
      const modal = document.getElementById('viewModal');
      if (event.target === modal) {
        closeModal();
      }
    }

    // Keyboard navigation
    document.addEventListener('keydown', function(event) {
      if (event.key === 'Escape') {
        closeModal();
      }
    });

    // Add smooth scrolling animation on page load
    document.addEventListener('DOMContentLoaded', function() {
      const cards = document.querySelectorAll('.announcement-card');
      cards.forEach((card, index) => {
        card.style.opacity = '0';
        card.style.transform = 'translateY(30px)';
        
        setTimeout(() => {
          card.style.transition = 'all 0.6s ease';
          card.style.opacity = '1';
          card.style.transform = 'translateY(0)';
        }, index * 100);
      });
    });
  </script>
</body>