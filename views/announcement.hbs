<!-- Announcement Creation Modal -->
<div class="announcement-modal" id="announcementModal" onclick="closeAnnouncementModal(event)">
  <div class="announcement-modal-content" onclick="event.stopPropagation()">
    <span class="announcement-close" onclick="closeAnnouncementModal()">&times;</span>
    <h2>Create New Announcement</h2>
    <form id="announcementForm">
      <div class="form-group">
        <label for="announcementTitle">Announcement Title *</label>
        <input type="text" id="announcementTitle" name="title" required placeholder="Enter announcement title...">
      </div>

      <div class="form-group">
        <label for="announcementContent">Content *</label>
        <textarea id="announcementContent" name="content" placeholder="Enter your announcement details..." required></textarea>
      </div>

      <div class="form-group">
        <label for="announcementPriority">Priority Level</label>
        <select id="announcementPriority" name="priority">
          <option value="low">Low Priority</option>
          <option value="medium">Medium Priority</option>
          <option value="high">High Priority</option>
        </select>
      </div>

      <div class="form-buttons">
        <button type="button" class="announcement-btn btn-secondary" onclick="closeAnnouncementModal()">Cancel</button>
        <button type="submit" class="announcement-btn btn-primary">Create Announcement</button>
      </div>
    </form>
  </div>
</div>

<script>
  let restaurantAnnouncements = [
    {
      title: "Welcome to RestroBytes!",
      content: "Welcome to our authentic Italian dining experience! We're excited to serve you the finest pasta, pizza, and wine in a warm, traditional atmosphere. Buon appetito!",
      priority: "high",
      date: "Jan 15, 2025"
    },
    {
      title: "New Winter Menu Available",
      content: "Our seasonal winter menu is now available featuring hearty risottos, warming soups, and traditional Italian comfort dishes. Perfect for the cold season!",
      priority: "medium",
      date: "Jan 12, 2025"
    },
    {
      title: "Wine Tasting Event",
      content: "Join us for our monthly wine tasting event featuring selections from Tuscany and Piedmont. Every Friday at 7 PM. Reservations recommended.",
      priority: "low",
      date: "Jan 10, 2025"
    }
  ];

  function openAnnouncementModal() {
    document.getElementById('announcementModal').style.display = 'flex';
    document.body.style.overflow = 'hidden';
  }

  function closeAnnouncementModal(event) {
    if (event && event.target !== document.getElementById('announcementModal')) return;
    document.getElementById('announcementModal').style.display = 'none';
    document.body.style.overflow = 'auto';
    document.getElementById('announcementForm').reset();
  }

  function formatAnnouncementDate(date) {
    return date.toLocaleDateString('en-US', { 
      month: 'short', 
      day: 'numeric', 
      year: 'numeric' 
    });
  }

  function createAnnouncementCard(announcement) {
    const priorityClass = `priority-${announcement.priority}`;
    const priorityText = announcement.priority.charAt(0).toUpperCase() + announcement.priority.slice(1) + ' Priority';

    return `
      <div class="announcement-card" style="animation: slideInUp 0.5s ease;">
        <div class="card-header">
          <div>
            <div class="card-title">${announcement.title}</div>
            <div class="card-date">${announcement.date}</div>
          </div>
        </div>
        <div class="card-content">${announcement.content}</div>
        <div class="card-priority ${priorityClass}">${priorityText}</div>
      </div>
    `;
  }

  function renderRestaurantAnnouncements() {
    const grid = document.getElementById('announcementsGrid');
    
    if (restaurantAnnouncements.length === 0) {
      grid.innerHTML = `
        <div class="empty-state">
          <h3>No announcements yet</h3>
          <p>Create your first restaurant announcement to keep customers informed!</p>
        </div>
      `;
    } else {
      grid.innerHTML = restaurantAnnouncements.map(createAnnouncementCard).join('');
    }
  }

  // MODIFIED: This function now sends data to the server
  document.getElementById('announcementForm').addEventListener('submit', function(e) {
    e.preventDefault();
    
    const formData = new FormData(e.target);
    const newAnnouncement = {
      title: formData.get('title'),
      content: formData.get('content'),
      priority: formData.get('priority'),
      date: formatAnnouncementDate(new Date())
    };

    // ADDED: Send data to server using fetch
    fetch('/admin/announcements', {
      method: 'POST',
      headers: {
        'Content-Type': 'application/json',
      },
      body: JSON.stringify({
        title: newAnnouncement.title,
        content: newAnnouncement.content,
        priority: newAnnouncement.priority
      })
    })
    .then(response => {
      if (response.ok) {
        // Keep the original UI behavior
        restaurantAnnouncements.unshift(newAnnouncement);
        renderRestaurantAnnouncements();
        closeAnnouncementModal();
        
        // Add success animation
        const grid = document.getElementById('announcementsGrid');
        const firstCard = grid.querySelector('.announcement-card');
        if (firstCard) {
          firstCard.style.animation = 'none';
          setTimeout(() => {
            firstCard.style.animation = 'slideInUp 0.5s ease';
          }, 10);
        }
        
        console.log('Announcement saved to database successfully!');
      } else {
        console.error('Error saving announcement to database');
        alert('Error saving announcement. Please try again.');
      }
    })
    .catch(error => {
      console.error('Network error:', error);
      alert('Network error. Please check your connection and try again.');
    });
  });

  // Close modal with Escape key
  document.addEventListener('keydown', function(e) {
    if (e.key === 'Escape') {
      closeAnnouncementModal();
    }
  });

  // Initialize announcements
  document.addEventListener('DOMContentLoaded', function() {
    renderRestaurantAnnouncements();
  });
</script>